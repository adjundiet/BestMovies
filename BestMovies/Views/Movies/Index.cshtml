@model IEnumerable<BestMovies.Models.Movie>

@{
    ViewBag.Title = "Index";
}

<h2>Movies</h2>
@if (Model == null || !Model.Any())
{
    <p>We don't have any movies yet.</p>
}
else
{
<table class="table">
    <tr>
        <th>
            Movie
        </th>
        <th>
            Genre
        </th>
    </tr>
    @foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.Name, "Details", "Movies", new { item.Id }, null)
        </td>
        <td>
           @item.Genre.Name
        </td>
    </tr>
    }
</table>
}